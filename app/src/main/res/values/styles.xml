<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="RelativeLayout" >

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/searchBackgroundColor</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:layout_alignParentTop">true</item>

    </style>

    <style name="EditText" >

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/Search_hint</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textSize1</item>
        <item name="android:inputType">textWebEditText</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:textColor">@color/textColor2</item>
        <item name="android:layout_alignParentStart">true</item>

    </style>

    <style name="Button_style" >

        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/search_button</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_alignParentEnd">true</item>

    </style>

    <style name="List_style" >

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/dividerSize</item>

    </style>

    <style name="Empty_text" >

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>

    </style>

    <style name="Book_title" >

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:padding">@dimen/little_padding</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">@dimen/textSize1</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Book_author" >

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/little_padding</item>
        <item name="android:textColor">@color/textColor3</item>
        <item name="android:textSize">@dimen/textSize2</item>
        <item name="android:textStyle">bold|italic</item>

    </style>
</resources>
